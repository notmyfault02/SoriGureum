<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.sorigureum">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_appicon"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_appicon_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.ui.user.UserActivity">
        </activity>
        <activity
                android:name=".ui.ui.splash.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.ui.login.LoginActivity">
        </activity>
        <activity android:name=".ui.MainActivity">
        </activity>
    </application>

</manifest>